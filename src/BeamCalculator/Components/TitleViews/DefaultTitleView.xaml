<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BeamCalculator.Components.DefaultTitleView"
             Loaded="OnLoaded">

    <Grid x:Name="container">

        <Label Grid.Column="0"
               x:Name="lblTitle"
               Text=""
               FontSize="20"
               FontAttributes="Bold"
               FontFamily="OpenSans"
               CharacterSpacing="0.5"
               TextColor="Black"
               Padding="{OnPlatform Android='0,0,0,4', WinUI='20,0,0,0'}"
               VerticalOptions="Center" 
               HorizontalOptions="Start" />

    </Grid>

</ContentView>
